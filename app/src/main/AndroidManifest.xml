<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.blockv.example">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:name="io.blockv.example.ExampleApplication"
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme"
    >
    <activity
      android:name="io.blockv.example.feature.landing.LandingActivity"
      android:label="@string/landing_page_title"
      android:screenOrientation="portrait"
      >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name="io.blockv.example.feature.login.LoginActivity"
      android:label="@string/login_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.register.RegisterActivity"
      android:label="@string/register_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.verify.VerifyActivity"
      android:label="@string/verify_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.inventory.InventoryActivity"
      android:label="@string/inventory_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.profile.ProfileActivity"
      android:label="@string/profile_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.activated.ActivatedActivity"
      android:label="@string/vatom_page_title"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="io.blockv.example.feature.details.VatomMetaActivity"
      android:label="@string/vatom_details_page_title"
      android:screenOrientation="portrait"
      />
  </application>

</manifest>